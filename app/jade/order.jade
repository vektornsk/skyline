extends ./tmp/_template.jade
include ./tmp/_bread-crumbs.jade

block title
	title Оформление заказа
block content
	.wrap-top
		.container.content-wrap
			.content-top
				+bread
			.cabinet-box.order
				h1 оформление заказа
				form
					.cart-box 
						.cart-top-box
							span Cодержимое заказа:
						ul.cart-list.cart-list_title
							li.cart-item.cart-item_product Товар 
							li.cart-item.cart-item_title Описание
							li.cart-item.cart-item_price-one Стоимость (1&nbsp;шт.) 
							li.cart-item.cart-item_calc Кол-во 
							li.cart-item.cart-item_price Общая стоимость 
							li.cart-item.cart-item_sale.pink  Скидка
						ul.cart-list
							li.cart-item.cart-item_product
								a(href="#")
									img(src="/images/product-1.png")
							li.cart-item.cart-item_title LEVANTE SOLARE 60 УЛЬТРАТОНКИЕ ЛЕТНИЕ
								.cart-item_more <span>Цвет:</span> Красный
								.cart-item_more <span>Размер:</span> S
							li.cart-item.cart-item_price-one  250 руб.
							li.cart-item.cart-item_calc 
								span 1
							li.cart-item.cart-item_price
								div.cart-price.cart-price_old 500 руб.
								div.cart-price.cart-price_new 100 руб.
							li.cart-item.cart-item_sale.pink 20%
						ul.cart-list
							li.cart-item.cart-item_product
								a(href="#")
									img(src="/images/product-2.png")
							li.cart-item.cart-item_title LEVANTE SOLARE 60 УЛЬТРАТОНКИЕ ЛЕТНИЕ
								.cart-item_more <span>Цвет:</span> Красный
								.cart-item_more <span>Размер:</span> S
							li.cart-item.cart-item_price-one  250 руб.
							li.cart-item.cart-item_calc
								span 1
							li.cart-item.cart-item_price
								.cart-price 500 руб.
							li.cart-item.cart-item_sale -
					.order__result-price Сумма к оплате: <div class="m-br"></div> 4 500 руб.
					.cabinet-box
						.left
							h2.info-title Персональная информация 
							label.account__label Фамилия
								input.accoint__inp(type="text", value="Васильевский", placeholder="Васильевский", name="surname")
							label.account__label Имя
								input.accoint__inp(type="text", placeholder="Дмитрий", value="Дмитрий", name="name")
							label.account__label Отчество
								input.accoint__inp(type="text", placeholder="Евгеньевич", value="Евгеньевич", name="secondname")
						.right
							h2.info-title Контактная информация 
							label.account__label Номер телефона
								input.accoint__inp(type="text", placeholder="+7(913) 913-15-15", value="+7(913) 913-15-15", name="phone")
							label.account__label Email
								input.accoint__inp(type="email", placeholder="example@mail.ru", value="example@mail.ru", name="email")
							label.account__label Адрес Доставки
								input.accoint__inp(type="text", placeholder="г. Новосибирск, ул. Ленина, 54, кв. 40", value="г. Новосибирск, ул. Ленина, 54, кв. 40", name="address")
					.order__city
						.select-wrap.select-wrap_line
							select.select(placeholder="Способ доставки:", name="city")
								option
								option(value="1") Почта Росиии
								option(value="2") Почта Росиии
								option(value="3") Транспортная компания
								option(value="4") Почта Росиии
					.order__tk
						span.tk Выберите транспортную компанию:
						.m-br
						label.tk__item
							input(type="radio", name="tk")
							span.tk__t1(title="1") 1
						label.tk__item
							input(type="radio", name="tk")
							span.tk__t2(title="2") 2
						label.tk__item
							input(type="radio", name="tk")
							span.tk__t3(title="3") 3
					.order__payment
						span.pay Выберите способ оплаты:
						.m-br
						label.pay__item
							input(type="radio", checked, name="pay")
							span.pay-card
						label.pay__item
							input(type="radio", name="pay")
							span.pay-ya
						label.pay__item
							input(type="radio", name="pay")
							span.pay-wm
					input.btn(type="submit", value="Перейти к оплате")
			.content-bottom						

block hidden
